#include<LiquidCrystal.h>  

LiquidCrystal lcd(12, 11, 5, 4, 3, 2);
int s=17,m=24,h=18;
float value = 49910;
void ceas()
{
  if(s==60){
  m=m+1;
  s=0;
  }
  if(m==60){
  m=0;
  h=h+1;
  }
  if(h==24){
  h=0;
  }
}
void setup()
{
  lcd.begin(16,2);
  lcd.setCursor(1,0);
  

noInterrupts();  

TCCR1A = 0;
TCCR1B = 0;

TCNT1 = value;   

TCCR1B |= (1 << CS10)|(1 << CS12);  

TIMSK1 |= (1 << TOIE1); 

interrupts();
}

ISR(TIMER1_OVF_vect)                   
{
  TCNT1 = value;                               
  s++; 
}

void loop()
{
  //Ceas
  lcd.setCursor(0, 1);
  lcd.print("Ora: ");
  lcd.setCursor(5, 1);
  lcd.print(h);
  lcd.setCursor(7,1);
  lcd.print(":");
  lcd.setCursor(8,1);  
  lcd.print(m);
  lcd.setCursor(10,1);
  lcd.print(":");
  lcd.setCursor(11,1);
  lcd.print(s);
  ceas();


}
